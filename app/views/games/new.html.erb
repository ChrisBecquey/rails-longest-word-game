<h1>New</h1>
<ul>
  <%@letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>

<p>What is the longest word you can write ?</p>

<form action="/score" method="post">
  <input type="text" name="score" placeholder="What letter are you looking for?">
  <%= hidden_field_tag 'letters', @letters %>
  <input type="submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
